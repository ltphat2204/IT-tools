    <h1 class="display-4">@Model.Name</h1>
    <p class="lead">@Model.Description</p>
</div>

<hr class="my-4" />

<iframe style="width: 100%; height: 100svh" src="@Url.Action("Render", "Tools", new { id = Model.ToolId })"></iframe>
