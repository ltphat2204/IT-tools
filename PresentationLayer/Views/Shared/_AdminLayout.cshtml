<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin IT tools</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PresentationLayer.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body class="bg-light">
    <div id="wrapper">
        <div id="sidebar-wrapper">
            <a class="nav-link" asp-controller="Home" asp-action="Index">
                <div class="sidebar-heading">IT Tools</div>
            </a>
            <hr/>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">
                        <i class="bi bi-bar-chart-line-fill me-2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">
                        <i class="bi bi-people-fill me-2"></i> Users
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">
                        <i class="bi bi-tools me-2"></i> Tools
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Groups">
                        <i class="bi bi-bucket-fill me-2"></i> Groups
                    </a>
                </li>
            </ul>
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-outline-primary me-2" id="menu-toggle">
                        <i class="bi bi-list"></i>
                    </button>
                    <partial name="_LoginPartial" />
                </div>
            </nav>

            <div class="container-fluid mt-3">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.getElementById("menu-toggle").addEventListener("click", function (e) {
          e.preventDefault();
          document.getElementById("wrapper").classList.toggle("toggled");
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
