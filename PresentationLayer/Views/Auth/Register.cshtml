@model PresentationLayer.Models.Auth.RegisterViewModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewBag.Title = "Register";
}

<div class="card shadow-sm" style="max-width: 400px; width: 100%;">
    <div class="card-body p-4">
        <h2 class="card-title mb-2">Join us now</h2>
        <p class="text-muted mb-4">
            It’s free for personalized experience
        </p>
        @using (Html.BeginForm("Register", "Auth", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary w-100">Sign up</button>
        }

        <div class="text-center text-muted my-3">OR</div>

        <div class="d-grid mb-3">
            <button class="btn btn-outline-secondary" type="button">
                <img src="https://www.svgrepo.com/show/475656/google-color.svg"
                     alt="Google Logo"
                     style="width: 18px; height: 18px; margin-right: 6px;" />
                Sign up with Google
            </button>
        </div>
    </div>
</div>


<div class="mt-3">
    <span class="text-muted">Already have an account?</span>
    <a asp-controller="Auth" asp-action="Login" class="text-decoration-none">Login now</a>
</div>