@model PresentationLayer.Models.Auth.LoginViewModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewBag.Title = "Login";
}
<div class="card shadow-sm" style="max-width: 400px; width: 100%;">
    <div class="card-body p-4">
        <h2 class="card-title mb-2">Welcome back</h2>
        <p class="text-muted mb-4">
            Please login to continue
        </p>
        @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="d-flex justify-content-end mb-3">
                <a href="#" class="text-decoration-none">Forgot password?</a>
            </div>

            <div class="mb-3 form-check">
                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label" })
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
        }

        <div class="text-center text-muted my-3">OR</div>

        <div class="d-grid mb-3">
            <button class="btn btn-outline-secondary" type="button">
                <img src="https://www.svgrepo.com/show/475656/google-color.svg"
                     alt="Google Logo"
                     style="width: 18px; height: 18px; margin-right: 6px;" />
                Login with Google
            </button>
        </div>
    </div>
</div>

<div class="mt-3">
    <span class="text-muted">Don’t have an account yet?</span>
    <a asp-controller="Auth" asp-action="Register" class="text-decoration-none">Sign up now</a>
</div>