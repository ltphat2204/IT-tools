@model PresentationLayer.Models.Tool.ToolsViewModel
@{  
    ViewData["Title"] = "Tools";  
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; 
}

<div class="mb-3">
    <form method="get" class="d-flex gap-2">
        <input type="text" class="form-control w-50" name="searchTerm" value="@Model.CurrentSearchTerm" placeholder="Search tools" />

        <select name="groupId" class="form-select w-25">
            <option value="0">All Groups</option>
            @foreach (var group in Model.Groups)
            {
                @if (group.GroupId == Model.CurrentGroupId)
                {
                    <option value="@group.GroupId" selected>@group.GroupName</option>
                }
                else
                {
                    <option value="@group.GroupId">@group.GroupName</option>
                }
            }
        </select>

        <button type="submit" class="btn btn-primary">Search</button>

        <a href="@Url.Action("CreateTool", "Admin")" class="btn btn-primary ms-auto">
            Create New Tool
        </a>
    </form>
</div>

<ul class="nav nav-tabs" id="toolTab" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="active-tools-tab" data-bs-toggle="tab" href="#active-tools" role="tab" aria-controls="active-tools" aria-selected="true">
            Active Tools
        </a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="disabled-tools-tab" data-bs-toggle="tab" href="#disabled-tools" role="tab" aria-controls="disabled-tools" aria-selected="false">
            Disabled Tools
        </a>
    </li>
</ul>

<!-- Tab Content -->
<div class="tab-content mt-3" id="toolTabContent">
    <!-- Active Tools -->
    <div class="tab-pane fade show active" id="active-tools" role="tabpanel" aria-labelledby="active-tools-tab">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Tool ID</th>
                    <th>Tool Name</th>
                    <th>Group Name</th>
                    <th>Premium</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tool in Model.Tools.Where(t => !t.IsDisabled))
                {
                    <tr>
                        <td>@tool.ToolId</td>
                        <td>@tool.Name</td>
                        <td>@tool.Group.GroupName</td>
                        <td>
                            @if (tool.IsPremium)
                            {
                                <i class="bi bi-star-fill text-warning"></i>
                            }
                            else
                            {
                                <i class="bi bi-star"></i>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("EditTool", "Admin", new { id = tool.ToolId })" class="btn btn-warning btn-sm">Edit</a>
                            <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteToolModal" data-id="@tool.ToolId" data-name="@tool.Name">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Disabled Tools -->
    <div class="tab-pane fade" id="disabled-tools" role="tabpanel" aria-labelledby="disabled-tools-tab">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Tool ID</th>
                    <th>Tool Name</th>
                    <th>Group Name</th>
                    <th>Premium</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tool in Model.Tools.Where(t => t.IsDisabled))
                {
                    <tr>
                        <td>@tool.ToolId</td>
                        <td>@tool.Name</td>
                        <td>@tool.Group.GroupName</td>
                        <td>
                            @if (tool.IsPremium)
                            {
                                <i class="bi bi-star-fill text-warning"></i>
                            }
                            else
                            {
                                <i class="bi bi-star"></i>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("EditTool", "Admin", new { id = tool.ToolId })" class="btn btn-warning btn-sm">Edit</a>
                            <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteToolModal" data-id="@tool.ToolId" data-name="@tool.Name">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination -->
<div class="d-flex justify-content-center">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <!-- First Page Button -->
            <li class="page-item @if(Model.CurrentPage == 1) { <text>disabled</text> }">
                <a class="page-link" href="@Url.Action("Tools", "Admin", new { page = 1, searchTerm = Model.CurrentSearchTerm, groupId = Model.CurrentGroupId })">First</a>
            </li>
            <!-- Previous Page Button -->
            <li class="page-item @if(Model.CurrentPage == 1) { <text>disabled</text> }">
                <a class="page-link" href="@Url.Action("Tools", "Admin", new { page = Model.CurrentPage - 1, searchTerm = Model.CurrentSearchTerm, groupId = Model.CurrentGroupId })">Previous</a>
            </li>

            <!-- Page Numbers -->
            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                @if (i == Model.CurrentPage)
                {
                    <li class="page-item active"  aria-current="page">
                        <a class="page-link" href="@Url.Action("Tools", "Admin", new { page = i, searchTerm = Model.CurrentSearchTerm, groupId = Model.CurrentGroupId })">@i</a>
                    </li>
                } else
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Tools", "Admin", new { page = i, searchTerm = Model.CurrentSearchTerm, groupId = Model.CurrentGroupId })">@i</a>
                    </li>
                }
                
            }

            <!-- Next Page Button -->
            <li class="page-item @if(Model.CurrentPage == Model.TotalPages) { <text>disabled</text> }">
                <a class="page-link" href="@Url.Action("Tools", "Admin", new { page = Model.CurrentPage + 1, searchTerm = Model.CurrentSearchTerm, groupId = Model.CurrentGroupId })">Next</a>
            </li>
            <!-- Last Page Button -->
            <li class="page-item @if(Model.CurrentPage == Model.TotalPages) { <text>disabled</text> }">
                <a class="page-link" href="@Url.Action("Tools", "Admin", new { page = Model.TotalPages, searchTerm = Model.CurrentSearchTerm, groupId = Model.CurrentGroupId })">Last</a>
            </li>
        </ul>
    </nav>
</div>


<div class="modal fade" id="deleteToolModal" tabindex="-1" role="dialog" aria-labelledby="deleteToolModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteToolModalLabel">Delete Tool</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" action="@Url.Action("DeleteTool", "Admin")">
                <div class="modal-body">
                    <input type="hidden" id="DeleteToolId" name="ToolId" />
                    <p>Are you sure you want to delete the tool <strong><span id="DeleteToolName"></span></strong>?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $('#deleteToolModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        var toolId = button.data('id');
        var toolName = button.data('name');

        var modal = $(this);
        modal.find('#DeleteToolId').val(toolId);
        modal.find('#DeleteToolName').text(toolName);
    });
</script>
